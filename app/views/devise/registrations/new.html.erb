<div class="row">
  <div class="pt-5 pb-1">
    <h1 class="text-start title">新規登録</h1>
  </div>
</div>
<hr class="border-dark mb-3 mt-0">

<div class="row my-text">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>
    
    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :username ,class: "col-sm-3 col-12 col-form-label text-sm-end fs-4" %>
        <div class="form-group col-sm-9 col-12">
          <%= f.text_field :username, autofocus: true, class: 'form-control fs-4', maxlength: 10 %>
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-9 col-12 form-group">
          <small class="form-text text-muted">未入力の場合匿名になります。</small>
          <small class="form-text text-muted">最大10文字です。</small>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :email ,class: "col-sm-3 col-12 col-form-label text-sm-end fs-4"%>
        <div class="form-group col-sm-9 col-12">
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control fs-4', required: true %>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :password ,class: "col-sm-3 col-12 col-form-label text-sm-end fs-4" %>
        <div class="form-group col-sm-9 col-12">
          <%= f.password_field :password, autocomplete: 'current-password',
                                    class: 'form-control fs-4', 
                                    required: true,
                                    minlength: @minimum_password_length,
                                    maxlength: '30',
                                    placeholder: "半角英数6文字以上" %>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :password_confirmation , class: "col-sm-3 col-12 col-form-label text-sm-end fs-4" %>
        <div class="form-group col-sm-9 col-12">
          <%= f.password_field :password_confirmation,
                                    class: 'form-control fs-4', 
                                    required: true,
                                    minlength: @minimum_password_length,
                                    maxlength: '30' %>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :year , class: "col-sm-3 col-12 col-form-label text-sm-end fs-4" %>
        <div class="form-group col-sm-9 col-12">
          <%= f.select :year, [2018, 2019, 2020, 2021], {}, class: "form-control fs-4" %>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5">
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-12">
        <%= f.label :lab , class: "col-sm-3 col-12 col-form-label text-sm-end fs-4" %>
        <div class="form-group col-sm-9 col-12">
          <%= f.select :lab, return_labs, {}, class: "form-control fs-4" %>
        </div>
      </div>
      <div class="col-sm-4"></div>
    </div>

    <div class="row m-5 justify-content-center">
      <div class="col-sm-3"></div>
      <div class="form-group col-sm-6 text-center">
          <%= f.submit t('.sign_up'), class: 'btn btn-block btn-lg btn-outline-primary my-2 fs-3' %>
      </div>
      <div class="col-sm-3"></div>
    </div>
  <% end %>
</div>
