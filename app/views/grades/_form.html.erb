<%= form_for @grade do |f| %>
  <div class="row justify-content-center text-sm-center text-start">
    <%= render 'grades/error_messages', model: f.object %>

    <div class="col-sm"></div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "A+", class: "fs-4" %>
        <%= f.number_field :AA, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "A", class: "fs-4" %>
        <%= f.number_field :A, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "B", class: "fs-4" %>
        <%= f.number_field :B, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "C", class: "fs-4" %>
        <%= f.number_field :C, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "D", class: "fs-4" %>
        <%= f.number_field :D, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm col-7 form-group text-sm-center text-start">
        <%= f.label "F", class: "fs-4" %>
        <%= f.number_field :F, class: 'form-control fs-4' %>
    </div>

    <div class="col-sm"></div>
  </div>

  <div class="row m-t justify-content-sm-center">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 form-group">
      <%= f.submit "提出", class: 'btn btn-outline-primary btn-block my-2 fs-3' %>
    </div>
    <div class="col-sm-3"></div>
  </div>

<% end %>
