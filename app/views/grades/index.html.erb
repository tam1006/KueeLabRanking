<div class="p-5 rounded">
  <h1>ランキング</h1>
</div>

<%= render 'layouts/flash_messages' %>

<div class="container">
    <div class="justify-content-center">
    <table id="ranking" class="table table-striped table-bordered" style="width: 1000px;">
            <thead>
                <th>名前</th>
                <th>A+</th>
                <th>A</th>
                <th>B</th>
                <th>C</th>
                <th>D</th>
                <th>F</th>
                <th>GPA</th>
                <th>研究室</th>
            </thead>
            <tbody>
            <% @grades.each do |grade|  %>
                <tr>
                    <td><%= grade.user[:username] %></td>
                    <td><%= grade.AA %></td>
                    <td><%= grade.A %></td>
                    <td><%= grade.B %></td>
                    <td><%= grade.C %></td>
                    <td><%= grade.D %></td>
                    <td><%= grade.F %></td>
                    <td><%= grade.GPA %></td>
                    <td><%= grade.user[:lab] %></td>
                </tr>
            <% end %>
            </tbody>
    </table>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $.extend( $.fn.dataTable.defaults, {
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Japanese.json"
        }
    });
    $('#ranking').DataTable({
        searching: false,
    });
  });
</script>
