<div class="row">
  <div class="pt-5 pb-1">
    <h1 class="text-start m-5 title-text">ランキング</h1>
  </div>
</div>
<hr class="border-dark mb-3 mt-0">


<%= render 'layouts/flash_messages' %>

<div class="container container-fluid">
    <div class="table-responsive">
    <table id="ranking" class="table table-striped table-bordered table-hover mytable text-nowrap">
            <thead>
                <th>名前</th>
                <th>入学年度</th>
                <th>A+</th>
                <th>A</th>
                <th>B</th>
                <th>C</th>
                <th>D</th>
                <th>F</th>
                <th>GPA</th>
                <th>研究室</th>
            </thead>
            <tbody>
            <% @grades.each do |grade|  %>
                <% if signed_in? and grade[:user_id] == current_user[:id] %>
                <tr class="table-primary">
                <% else %>
                <tr>
                <% end %>
                    <td class="width: "><%= grade.user[:username] %></td>
                    <td ><%= grade.user[:year] %></td>
                    <td ><%= grade.AA %></td>
                    <td ><%= grade.A %></td>
                    <td ><%= grade.B %></td>
                    <td ><%= grade.C %></td>
                    <td ><%= grade.D %></td>
                    <td ><%= grade.F %></td>
                    <td ><%= grade.GPA %></td>
                    <td ><%= grade.user[:lab] %></td>
                </tr>
            <% end %>
            </tbody>
    </table>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $.extend( $.fn.dataTable.defaults, {
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Japanese.json"
        }
    });
    $('#ranking').DataTable({
        // searching: false,
        autoWidth: true,
        order: [[1, 'desc'], [2, 'desc'], [3, 'desc'], [4, 'desc'], [5, 'desc'], [6, 'desc'], [7, 'desc']],
        columnDefs: [
            { targets: 1, orderData: [1, 2, 3, 4, 5, 6, 7] },
            { targets: 2, orderData: [2, 3, 4, 5, 6, 7] },
            { targets: 3, orderData: [3, 2, 4, 5, 6, 7] },
            { targets: 4, orderData: [4, 2, 3, 5, 6, 7] },
            { targets: 5, orderData: [5, 2, 3, 4, 6, 7] },
            { targets: 6, orderData: [6, 2, 3, 4, 5, 7] },
            { targets: 7, orderData: [7, 2, 3, 4, 5, 6] },
            { targets: 8, orderData: [8, 2, 3, 4, 5, 6] }
        ],
        dom: "<'row'<'col-sm-6 col-12'l><'col-sm-6 col-12 text-sm-end'f>>" +
        "<'row'<'col-12'tr>>" +
        "<'row'<'col-12 col-sm-6'i><'col-12 col-sm-6 text-sm-end'p>>",
    });
  });
</script>
