    <input type="number" class="form-control" id="validationCustom01" value ="" required>
  </div>
  <div class="col-md-1">
    <label for="validationCustom01" class="form-label">E</label>
    <input type="number" class="form-control" id="validationCustom01" value ="" required>
  </div>
