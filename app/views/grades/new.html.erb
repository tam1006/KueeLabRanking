<div class="center jumbotron">
    <h1>成績入力</h1>

    <h2>
        専門科目の各評価の単位の合計数を入力してください。
    </h2>

</div>

<%= form_for @grade do |f| %>
  <div class="row text-center ">
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "A+" %>
        <%= f.number_field :AA, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "A" %>
        <%= f.number_field :A, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "B" %>
        <%= f.number_field :B, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "C" %>
        <%= f.number_field :C, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "D" %>
        <%= f.number_field :D, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "E" %>
        <%= f.number_field :E, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <%= f.label "F" %>
        <%= f.number_field :F, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <div class="form-group">
        <%= f.submit "提出", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>